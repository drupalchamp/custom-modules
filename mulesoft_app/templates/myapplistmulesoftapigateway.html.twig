{% else %}


<div class="myapps">
  <div class="applistpage">
    <nav class="sidebar">
      <div id="myapp-data">Apps <span id="arrow-down"><svg focusable="false" version="1.1" id="chevron_x5F_down-layer" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 18 18" style="enable-background:new 0 0 18 18;" xml:space="preserve">
        <g id="chevron_x5F_down_1_">
          <polygon points="17,4.196 9,12.194 1,4.196 1,5.892 9,13.892 17,5.892 	"></polygon>
          <rect transform="matrix(-1 -1.224647e-16 1.224647e-16 -1 18 18)" style="fill:none;" width="18" height="18"></rect>
        </g>
        </svg></span></div>
      <ul class="nav flex-column">
        <li>
          <a class="nav-link" href="/list-company">Companies</a>
        </li>
        <li>
          <a class="nav-link active hsbc-bold" href="/myapp">Apps</a>
        </li>
      </ul>
    </nav>
    <main role="main" class="apps-listing">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap app-title-group border-bottom">
        <h1 class="h1-title hsbc-light">Apps</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a class="btn btn-tertiary--light" href="{{ url('mulesoft_app.myappaddapp') }}" role="button">
            <img alt="create app" class="add-btn-icon" src="/themes/custom/hsbcmarketplace/images/add.svg"/>Create new app</a>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered apps-list">
          <thead class="thead-light">
          <tr class="hsbc-regular">
            <th scope="col">App name</th>
            <th scope="col" class="status-d-none">Status</th>
            <th scope="col" class="lastupdated-d-none">Last updated</th>
            <td scope="col" aria-label="No value"></td>
          </tr>
          </thead>
          <tbody class="hsbc-light">
          {% for keynum,eachappentity in appentity %}
            <tr>
              <td>{{ eachappentity.label() }}</td>
              {% if eachappentity.status.0.value == 1 %}
                <td class="status-d-none">
                    <span class="publishedstatus approved">
                      <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" width="18" height="18" fill="#00847F"
                           class="bi bi-circle-fill" viewBox="0 0 18 18">
                        <circle cx="8" cy="8" r="8"/>
                      </svg>
                      Approved
                    </span>
                </td>
              {% else %}
                <td class="status-d-none"><span class="publishedstatus pending"> Review in progress </span></td>
              {% endif %}
              <td class="lastupdated-d-none">
                {% if eachappentity.status.0.value == 1 %}
                  {{ eachappentity.changed.value|date("j M Y G:i ") }}
                {% endif %}
              </td>
              <td>
                <a href="/myapp/{{ eachappentity.id() }}/details">
                  <img alt="View"  class="view-btn-icon" src="/themes/custom/hsbcmarketplace/images/view.svg"/>View
                </a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
{% endif %}
